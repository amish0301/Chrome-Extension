{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Your Reminder",
    "description": "Customized Reminders for Water breaks and much more",
    "action": {
        "default_title": "Your Reminder",
        "default_popup": "popup.html"
    },

    "background": {
        "service_worker": "background.js"
    },

    "permissions": [
        "contextMenus", "notifications", "alarms", "activeTab", "scripting", "storage", "background"
    ]

}